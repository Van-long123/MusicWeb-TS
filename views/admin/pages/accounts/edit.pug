extend ../../layouts/default
include ../../mixins/alert.pug
block main 
    h1 Chỉnh sửa mới tài khoản
    +alert-success(5000)
    +alert-error(5000) 
    form(
        action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`,
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullname") Họ tên
            input(
            type="text",
            class="form-control",
            id="fullname",
            name="fullname",
            value=data.fullname
            required
            )
        div(class="form-group")
            label(for="email") Email
            input(
            type="text",
            class="form-control",
            id="email",
            name="email",
            value=data.email
            required
            )
        div(class="form-group")
            label(for="password") Mật khẩu
            input(
            type="password",
            class="form-control",
            id="password",
            name="password",
            )
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
            type="text",
            class="form-control",
            id="phone",
            name="phone",
            value=data.phone
            required
            )
                
        div(class="form-group" upload-image)
            label(for="avatar") Avatar
            input(
                type="file",
                class="form-control-file",
                id="avatar",
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(src=data.avatar id="blah" class="image-prev"  upload-image-preview width="200px")

        
        div(class="form-group")
            label(for="role_id") Phân quyền
            select(
                class="form-control",
                id="role_id",
                name="role_id",
            ) 
                option(disabled) -- Chọn --
                //- check if else vif lỡ như chưa có ôn nào tạo nhóm quyền thì sao
                each role in roles
                    option(value=role.id 
                        selected =role.id==data.role_id?true:false
                    ) #{role.title} 

        div(class="form-group form-check form-check-inline")
            input(
                type="radio",
                class="form-check-input",
                id="statusActive",
                name="status",
                value="active",
                checked=(data.status=="active"?true:false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
            input(
                type="radio",
                class="form-check-input",
                id="statusInActive",
                name="status",
                value="inactive"
                checked=(data.status=="inactive"?true:false)
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                class="btn btn-primary"
                type="submit"
            ) Cập nhật