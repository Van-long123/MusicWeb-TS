extend ../../layouts/default
include ../../mixins/fillter-status
include ../../mixins/search
include ../../mixins/pagination
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/moment.pug
block main
    if(role.permissions.includes("playlists_view"))
        h1 Trang danh sách bài hát
        .card.mb-3
            .card-header Bộ lọc và Tìm kiếm
            .card-body
                +alert-success(5000)
                +alert-error(5000)
                .row
                    .col-6
                        +fillter-status(fillterStatus)
                    .col-6
                        +search()

        .card.mb-3
            .card-header Danh sách bài hát
            .card-body
                .row
                    .col-8
                        if(role.permissions.includes("playlists_edit"))
                            +form-change-multi(`${prefixAdmin}/playlists/change-multi?_method=PATCH`)
                    .col-4
                        if(role.permissions.includes("playlists_create"))
                            a(href=`${prefixAdmin}/playlists/create` class="btn btn-outline-success") + Thêm mới
        .card.mb-3
            .card-header Sắp xếp
                .card-body
                    .row
                    .col-4
                        +sort()              
                table(class="table table-hover table-sm" checkbox-multi)
                    thead
                        tr
                            th 
                                input(type="checkbox", name="checkall")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Vị trí
                            th Trạng thái
                            th Người tạo
                            th Người cập nhật
                            th Hành động
                    tbody
                        each item,index in playlists
                            tr
                                td 
                                    input(type="checkbox", name="id" value=item.id)
                                td #{pagination.limitItems*(pagination.currentPage-1)+(index +1)}
                                td
                                    img(src=`${item.avatar}`, alt=item.title, width="100px", height="auto")
                                td #{item.title}
                                td
                                    input(type="number", name="position" value=item.position min=1 style="width:60px")
                                td 
                                    if(role.permissions.includes("playlists_edit"))
                                        if(item.status == 'active')
                                            a(
                                                href="javascript:;"
                                                data-status=item.status
                                                data-id=item.id
                                                button-change-status
                                                class="badge badge-success") #{item.status}
                                        else
                                            a(
                                                href="javascript:;"
                                                data-status=item.status
                                                data-id=item.id
                                                button-change-status
                                                class="badge badge-danger") #{item.status}
                                    else 
                                        if(item.status == "active")
                                            a(
                                                href="javascript:;"
                                                class="badge badge-success") #{item.status}
                                        else
                                            a(
                                                href="javascript:;"
                                                class="badge badge-danger") #{item.status}
                                    
                                td 
                                    p #{item.fullName}
                                    if(item.createdBy)
                                        +formatDateTime(item.createdBy.createdAt)
                                td 
                                    if(item.updatedBy)
                                        - let updatedBy=item.updatedBy.slice(-1)[0]
                                        if(updatedBy)
                                            p #{updatedBy.accountFullName}
                                            +formatDateTime(updatedBy.updatedAt)
                                td 
                                    a(href=`${prefixAdmin}/playlists/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết
                                    if(role.permissions.includes("playlists_edit"))
                                        a(href=`${prefixAdmin}/playlists/edit/${item.id}` class="btn btn-warning  btn-sm ml-1") Sửa
                                    if(role.permissions.includes("playlists_delete"))
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            data-id=item.id
                                            button-delete
                                            ) Xóa

        +pagination(pagination)
        
        //- html chỉ có 2 pt là post và patch
        //- khi nhấn submit mà method là get sẽ lọt vào route get còn post thì router post
        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/playlists/change-status`
        ) 
        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/playlists/delete`
        ) 
        script(src="/admin/js/playlist.js")
    else
        img(src="/images/5206817.jpg", alt="Unauthorization" style="width:1000px;height:600px")