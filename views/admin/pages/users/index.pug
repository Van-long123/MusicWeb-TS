extend ../../layouts/default
include ../../mixins/fillter-status
include ../../mixins/search
include ../../mixins/pagination
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
block main
    if(role.permissions.includes("users_view"))
        h1 Danh sách tài khoản
        .card.mb-3
            .card-header Bộ lọc và Tìm kiếm
            .card-body
                +alert-success(5000)
                +alert-error(5000)
                .row
                    .col-6
        
                        +fillter-status(fillterStatus)
                    .col-6
                        +search()
        .card.mb-3
            .card-header Danh sách sản phẩm
            .card-body
                .row
                    .col-8
                        +form-change-multi-singer(`${prefixAdmin}/users/change-multi?_method=PATCH`)
                    .col-4
                        a(href=`${prefixAdmin}/users/create` class="btn btn-outline-success") +Thêm mới
        .card.mb-3
            .card-header Danh sách
                .card-body
                table(class="table table-hover table-sm" checkbox-multi)
                    thead
                        tr
                            th 
                                input(type="checkbox", name="checkall")
                            th STT
                            th Avatar
                            th Họ tên
                            th Email
                            th Địa chỉ
                            th Số điện thoại
                            th Trạng thái
                            th Hành động
                    tbody
                        each item,index in records
                            tr
                                td 
                                    input(type="checkbox", name="id" value=item.id)
                                td #{pagination.limitItems*(pagination.currentPage-1)+(index +1)}
                                td
                                    img(src=`${item.avatar}`, alt=item.fullName, width="100px", height="auto")
                                td #{item.fullName}
                                td #{item.email}
                                td #{item.address}
                                td #{item.phone}
                                td 
                                    if(item.status == "active")
                                        a(
                                            href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-success") #{item.status}
                                    else
                                        a(
                                            href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-danger") #{item.status}
                                td 
                                    a(href=`${prefixAdmin}/users/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết
                                    a(href=`${prefixAdmin}/users/edit/${item.id}` class="btn btn-warning btn-sm ml-1") Sửa
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        data-id=item.id
                                        button-delete
                                        ) Xóa
        
        +pagination(pagination)
        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/users/change-status`
        ) 
        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/users/delete`
        ) 
        script(src="/admin/js/user.js")
    else
        img(src="/images/5206817.jpg", alt="Unauthorization" style="width:1000px;height:600px")