extend ../../layouts/default
block main 
    h1 Thêm mới sản phẩm
    form(
        action=`${prefixAdmin}/singers/edit/${singer.id}?_method=PATCH`,
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Họ và tên
            input(
            type="text",
            class="form-control",
            id="title",
            name="fullName",
            value=singer.fullName
            required
            )
        div(class="form-group" upload-image)
            label(for="avatar") Ảnh
            input(
                type="file",
                class="form-control-file",
                id="avatar",
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(id="blah" class="image-prev" src=singer.avatar upload-image-preview width="300px")
        div(class="form-group form-check form-check-inline")
            input(
                type="radio",
                class="form-check-input",
                id="statusActive",
                name="status",
                value="active",
                checked=singer.status=='active' ? true :false
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio",
                class="form-check-input",
                id="statusInActive",
                name="status",
                value="inactive"
                checked=singer.status=='inactive' ? true : false
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                class="btn btn-primary"
                type="submit"
            ) Tạo mới

