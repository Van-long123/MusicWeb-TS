extend ../../layouts/default
include ../../mixins/fillter-status
include ../../mixins/search
include ../../mixins/pagination
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/moment.pug
block main
    if(role.permissions.includes("topics_view"))
        h1 Trang danh sách chủ đề
        .card.mb-3
            .card-header Bộ lọc và Tìm kiếm
            .card-body
                +alert-success(5000)
                +alert-error(5000)
                .row
                    .col-6
                        +fillter-status(fillterStatus)
                    .col-6
                        +search()

        .card.mb-3
            .card-header Danh sách chủ đề
            .card-body
                .row
                    .col-8
                        +form-change-multi(`${prefixAdmin}/topics/change-multi?_method=PATCH`)
                    .col-4
                        a(href=`${prefixAdmin}/topics/create` class="btn btn-outline-success") + Thêm mới
        .card.mb-3
            .card-header Sắp xếp
                .card-body
                    .row
                    .col-4
                        +sort()              
                table(class="table table-hover table-sm" checkbox-multi)
                    thead
                        tr
                            th 
                                input(type="checkbox", name="checkall")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Vị trí
                            th Trạng thái
                            th Người tạo
                            th Người cập nhật
                            th Hành động
                    tbody
                        each item,index in topics
                            tr
                                td 
                                    input(type="checkbox", name="id" value=item.id)
                                td #{pagination.limitItems*(pagination.currentPage-1)+(index +1)}
                                td
                                    img(src=`${item.avatar}`, alt=item.title, width="100px", height="auto")
                                td #{item.title}
                                td
                                    input(type="number", name="position" value=item.position min=1 style="width:60px")
                                td 
                                    if(item.status == 'active')
                                        a(
                                            href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-success") #{item.status}
                                    else
                                        a(
                                            href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-danger") #{item.status}
                                    
                                td 
                                    p #{item.fullName}
                                    if(item.createdBy)
                                        +formatDateTime(item.createdBy.createdAt)
                                td 
                                    if(item.updatedBy)
                                        - let updatedBy=item.updatedBy.slice(-1)[0]
                                        if(updatedBy)
                                            p #{updatedBy.accountFullName}
                                            +formatDateTime(updatedBy.updatedAt)
                                td 
                                    a(href=`${prefixAdmin}/topics/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết
                                    a(href=`${prefixAdmin}/topics/edit/${item.id}` class="btn btn-warning  btn-sm ml-1") Sửa
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        data-id=item.id
                                        button-delete
                                        ) Xóa

        +pagination(pagination)
        
        //- html chỉ có 2 pt là post và patch
        //- khi nhấn submit mà method là get sẽ lọt vào route get còn post thì router post
        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/topics/change-status`
        ) 
        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/topics/delete`
        ) 
        script(src="/admin/js/topic.js")
    else
        img(src="/images/5206817.jpg", alt="Unauthorization" style="width:1000px;height:600px")    