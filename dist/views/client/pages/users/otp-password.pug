extends ../../layouts/user.pug
include ../../mixins/alert.pug
block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Nhập mã OTP
        form(
          action="/user/password/otp"
          method="POST"
        )
            +alert-error-forgot(5000)
            div(class="form-group")
                label(for="email") Email
                input(
                class="border"
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=email
                required
                )
            div(class="form-group")
                label(for="otp") Mã OTP
                input(
                class="border"
                type="text"
                class="form-control"
                id="otp"
                name="otp"
                required
                )
            div(class="text-center mt-4")
                button(class="btn btn-primary") Xác nhận
