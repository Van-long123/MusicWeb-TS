extend ../../layouts/default
block main  
    .head-title
        .left
            h1 Dashboard
            ul.breadcrumb
                li
                    a(href=`${prefixAdmin}/dashboard`) Dashboard
                li
                    i.bx.bx-chevron-right
                li
                    a.active(href=`${prefixAdmin}/dashboard`) Home
    ul.box-info
        .container  
            .row
                .col-md-6.product
                    li
                        i.bx.bxs-calendar-check
                        span.text
                            h3 Chủ đề
                            p Số lượng:<b> #{statistic.topic.total} </b>
                            p Hoạt động:<b> #{statistic.topic.active} </b>
                            p Dừng hoạt động: <b> #{statistic.topic.inactive}</b>
                .col-md-6.product-category
                    li
                        i(class='bx bxl-product-hunt')
                        span.text
                            h3 Bài hát
                            p Số lượng:<b> #{statistic.song.total} </b>
                            p Hoạt động:<b> #{statistic.song.active} </b>
                            p Dừng hoạt động: <b> #{statistic.song.inactive}</b>
