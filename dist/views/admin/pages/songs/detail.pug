extend ../../layouts/default
include ../../mixins/alert.pug
block main
    //- div=song
    if (song.title) 
        h1(class="mb-4") #{song.title}
    if (topic.title) 
        div(class="mb-4") Chủ đề: <b>#{topic.title}</b>
    if (singer.fullName) 
        div(class="mb-4") Ca sĩ: <b>#{singer.fullName}</b>
    if (song.avatar)
        div(class="mb-4")
            img(
            src=song.avatar
            style="width: 100px"
            )
    if (song.status)
        div(class="mb-4")
            span Status:
            if (song.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động
    if (song.position) 
        div(class="mb-4") Vị trí: <b>#{song.position}</b>
    if (song.description)
        div(class="mb-4") !{song.description}
    a(href=`${prefixAdmin}/songs/edit/${song.id}` class="btn btn-warning btn-sm ml-1") Chỉnh sửa
    script(src="/admin/js/song.js")
