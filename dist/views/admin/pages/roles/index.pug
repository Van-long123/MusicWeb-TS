extend ../../layouts/default
include ../../mixins/alert.pug
block main 
    if(role.permissions.includes("roles_view"))
        h1 Nhóm quyền 
        .card.mb-3
            .card-header Danh sách
            .card-body
                +alert-success(5000)
                +alert-error(5000)
                .row
                    .col-8
                    .col-4  
                        a(href=`${prefixAdmin}/roles/create` class="btn btn-outline-success") + Thêm mới
            
        table(class="table table-hover table-sm")
            thead
                tr
                    th STT
                    th Nhóm quyền
                    th Mô tả ngắn
                    th Hành động
            tbody
                if(records.length > 0)
                    each item,index in records
                        tr
                            td #{index +1}
                            td #{item.title}
                            td #{item.description}
                            td 
                                //- a(href=`${prefixAdmin}/roles/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết
                                a(href=`${prefixAdmin}/roles/edit/${item.id}` class="btn btn-warning btn-sm ml-1") Sửa
                                button(
                                    class="btn btn-danger btn-sm ml-1"
                                    data-id=item.id
                                    button-delete
                                    ) Xóa
        form(
            action=""
            data-path=`${prefixAdmin}/roles/delete`
            id='form-delete-item'
            method="post"
        ) 
        script(src="/admin/js/role.js")
    else
        img(src="/images/5206817.jpg", alt="Unauthorization" style="width:1000px;height:600px")