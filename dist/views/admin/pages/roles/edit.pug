extends ../../layouts/default.pug
block main
    if(role.permissions.includes("roles_edit"))
        h1(class="mb-4") Thêm mới nhóm quyền
        +alert-success(5000)
        +alert-error(5000)
        form(
            action=`${prefixAdmin}/roles/edit/${record.id}`
            method="POST"
        )   
            div(class="form-group")
                label(for="title") Nhóm quyền
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    value=record.title
                    required
                )

            div(class="form-group")
                label(for="desc") Mô tả ngắn
                input(
                    type="text"
                    class="form-control"
                    id="desc"
                    value=record.description
                    name="description"
                )
            div(class="form-group")
                button(class="btn btn-primary" type="submit") Cập nhật
    else
        img(src="/images/5206817.jpg", alt="Unauthorization" style="width:1000px;height:600px")